<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<html>
<body>
<section class="userdetails-content">
    <!-- Thông báo & Liên lạc -->
    <h2>Thông báo & Liên lạc</h2>
    <div class="setting-section">
        <div class="setting-option">
            <p>Thông báo cập nhật đơn hàng</p>
            <input type="checkbox" class="toggle-button">
        </div>
        <div class="setting-option">
            <p>Thông báo khuyến mãi & ưu đãi</p>
            <input type="checkbox" class="toggle-button">
        </div>
        <div class="setting-option">
            <p>Gửi email cho tôi</p>
            <input type="checkbox" class="toggle-button">
        </div>
        <div class="setting-option">
            <p>Gửi tin nhắn SMS cho tôi</p>
            <input type="checkbox" class="toggle-button">
        </div>
    </div>

    <!-- Giao diện & Trợ năng -->
    <h2>Giao diện & Trợ năng</h2>
    <div class="setting-section">
        <div class="setting-option">
            <p>Ngôn ngữ</p>
            <select class="drop-box">
                <option>Tiếng Anh</option>
                <option>Tiếng Việt</option>
            </select>
        </div>
        <div class="setting-option">
            <p>Chủ đề</p>
            <select class="drop-box">
                <option>Sáng</option>
                <option>Tối</option>
            </select>
        </div>
        <div class="setting-option">
            <p>Kích thước chữ</p>
            <select class="drop-box">
                <option>Bình thường</option>
                <option>Lớn</option>
            </select>
        </div>
    </div>

    <!-- Quyền riêng tư & Dữ liệu -->
    <h2>Quyền riêng tư & Dữ liệu</h2>
    <div class="setting-section">
        <div class="setting-option">
            <p>Cho phép Cookie</p>
            <input type="checkbox" class="toggle-button">
        </div>
        <div class="setting-option">
            <p>Cho phép lưu dữ liệu</p>
            <input type="checkbox" class="toggle-button">
        </div>
    </div>

    <!-- Cài đặt ứng dụng & thiết bị -->
    <h2>Cài đặt Ứng dụng & Thiết bị</h2>
    <div class="setting-section">
        <div class="setting-option">
            <p>Ghi nhớ tôi / tự động đăng nhập</p>
            <input type="checkbox" class="toggle-button">
        </div>
    </div>
</section>

</body>
</html>
